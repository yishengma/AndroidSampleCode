<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_registHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="修改密码"
        android:textColor="#000000"
        android:textSize="18dp" />
    <View
        android:id="@+id/view_wire1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_registHint"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000" />
    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_wire1"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_userHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="用户名	："
            android:textSize="16dp" />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_userHint"
            android:layout_alignBottom="@+id/tv_userHint"
            android:layout_toRightOf="@+id/tv_userHint"
            android:background="@null"
            android:ems="10"
            android:hint="请输入账号" />
        <TextView
            android:id="@+id/tv_phoneHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_userHint"
            android:layout_below="@+id/et_username"
            android:layout_marginTop="20dp"
            android:text="原密码	："
            android:textSize="16dp" />
        <EditText
            android:id="@+id/et_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_phoneHint"
            android:layout_toRightOf="@+id/tv_phoneHint"
            android:background="@null"
            android:ems="10"
            android:hint="请输入原密码" />
        <TextView
            android:id="@+id/tv_pswHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phoneHint"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/et_psw"
            android:text="新密码	："
            android:textSize="16dp" />
        <EditText
            android:id="@+id/et_newpsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_psw"
            android:layout_alignTop="@+id/tv_pswHint"
            android:background="@null"
            android:ems="10"
            android:hint="请输入新密码" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/et_newpsw" />
    </RelativeLayout>
</RelativeLayout>